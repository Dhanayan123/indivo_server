{% load template_utils %}<Problem xmlns="http://indivo.org/vocab/xml/documents#">
  {% if fobj.startDate %}
    <dateOnset>{{ fobj.startDate|format_iso8601_datetime }}</dateOnset>
  {% endif %}
  {% if fobj.endDate %}
    <dateResolution>{{ fobj.endDate|format_iso8601_datetime }}</dateResolution>
  {% endif %}
  {% if fobj.name_title %}
    <name{% if fobj.name_system %} type="{{ fobj.name_system }}" value="{{ fobj.name_identifier }}"{% endif %}>{{ fobj.name_title }}</name>
  {% endif %}
  {% if fobj.notes %}
    <comments>{{ fobj.notes }}</comments>
  {% endif %}
</Problem>
